<Window x:Class="Gym_project.TableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gym_project"
        mc:Ignorable="d"
        Title="TableWindow" Height="370" Width="520" WindowStyle="None">
    <Grid>
        <DataGrid x:Name="grid1" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,0,37"/>
        <ComboBox x:Name="combobox1" HorizontalAlignment="Right" Margin="0,0,10,8" VerticalAlignment="Bottom" Width="175" SelectionChanged="combobox1_SelectionChanged"/>
        <Button x:Name="button_close" Content="Закрыть" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="63" Height="20" Click="button_close_Click"/>

    </Grid>
</Window>
