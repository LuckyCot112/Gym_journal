<Window x:Class="Gym_project.StatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gym_project"
        mc:Ignorable="d"
        Title="StatWindow" Height="245" Width="397" ResizeMode="NoResize" WindowStyle="None">
    <Grid>
        <Label Content="Выберите начало и конец периода" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Calendar x:Name="calendar1" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" SelectedDatesChanged="calendar_changed1"/>
        <Calendar x:Name="calendar2" HorizontalAlignment="Left" Margin="204,41,0,0" VerticalAlignment="Top" SelectedDatesChanged="calendar_changed1"/>
        <Button Content="Закрыть окно" HorizontalAlignment="Left" Margin="308,214,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Label x:Name="label_result" Content="Выберите промежуток..." HorizontalAlignment="Left" Margin="10,214,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
