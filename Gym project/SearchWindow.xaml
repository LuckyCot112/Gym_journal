<Window x:Class="Gym_project.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gym_project"
        mc:Ignorable="d"
        Title="SearchWindow" Height="450" Width="270" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" WindowStyle="None">
    <Grid>
        <TextBox x:Name="textbox_search" HorizontalAlignment="Center" Margin="0,35,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="250"/>
        <Label Content="Поиск клиента..." HorizontalAlignment="Center" Margin="0,4,0,0" VerticalAlignment="Top" Width="250"/>
        <DataGrid x:Name="grid_result" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="5 60 5 55"/>
        <Button x:Name="button_search_name" Content="Поиск" HorizontalAlignment="Center" Margin="0,0,0,30" VerticalAlignment="Bottom" Width="250" Click="button_search_name_Click"/>
        <Button x:Name="button_cancel" Content="Отмена" HorizontalAlignment="Center" Margin="0,0,0,5" VerticalAlignment="Bottom" Width="250" Click="button_cancel_Click"/>

    </Grid>
</Window>
